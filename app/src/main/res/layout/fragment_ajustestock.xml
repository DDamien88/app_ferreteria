<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentAjuste"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.stock.AjusteStockFragment">

    <!-- Campo de producto + botón Scan -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilProductoAjuste"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProductoAjuste"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Escaneá o ingresá el código interno"
                android:inputType="number"
                android:maxLength="20"
                android:importantForAutofill="no"
                android:imeOptions="actionDone" />

            <Button
                android:id="@+id/btnEscanearCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Scan" />
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tilProductoAjuste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Radio buttons -->
    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/rbCompra"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Compra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/previewView" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/rbInventario"
        android:layout_width="128dp"
        android:layout_height="50dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:text="Inventario"
        app:layout_constraintStart_toEndOf="@id/rbCompra"
        app:layout_constraintTop_toBottomOf="@id/previewView" />

    <!-- Cantidad -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCantidadAjuste"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbCompra">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCantidadAjuste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Observación -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilObservacion"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Observación (opcional)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilCantidadAjuste">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etObservacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón Confirmar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmarAjuste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmar ajuste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilObservacion" />

</androidx.constraintlayout.widget.ConstraintLayout>
