<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Buscar usuario -->
    <EditText
        android:id="@+id/etBuscarUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar por usuario"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etBuscarFecha"
        android:layout_marginEnd="8dp" />

    <!-- Buscar fecha -->
    <EditText
        android:id="@+id/etBuscarFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etBuscarUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Hacer chain horizontal entre los EditText -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fixChain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/etBuscarUsuario"
        app:layout_constraintBottom_toBottomOf="@id/etBuscarUsuario"
        app:layout_constraintStart_toStartOf="@+id/etBuscarUsuario"
        app:layout_constraintEnd_toEndOf="@+id/etBuscarFecha"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- Botón Filtrar -->
    <Button
        android:id="@+id/btnFiltrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        app:layout_constraintTop_toBottomOf="@id/etBuscarUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLimpiar"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp" />

    <!-- Botón Limpiar -->
    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        app:layout_constraintTop_toBottomOf="@id/etBuscarFecha"
        app:layout_constraintStart_toEndOf="@id/btnFiltrar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp" />

    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotificaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnFiltrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Texto vacío -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay notificaciones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/rvNotificaciones"
        app:layout_constraintBottom_toBottomOf="@+id/rvNotificaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
