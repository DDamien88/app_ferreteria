<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentReportes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@android:color/white"
    tools:context=".ui.reporteVentas.ReporteVentasFragment">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvReportesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Filtro de período -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFiltroPeriodo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvReportesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">

        <AutoCompleteTextView
            android:id="@+id/autoFiltroPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Período"
            android:text="Mes actual"
            android:inputType="none"
            android:paddingEnd="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Gráfico de barras (ventas por mes o categoría)
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartVentas"
        android:layout_width="0dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/tvReportesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_chart_card"
        android:padding="8dp"
        tools:ignore="MissingConstraints" />-->

    <!-- Gráfico de torta (distribución por categoría)
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartCategorias"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/barChartVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_chart_card"
        android:padding="8dp" />-->

    <!-- Texto para lista
    <TextView
        android:id="@+id/tvUltimosMovimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Últimos movimientos"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/pieChartCategorias"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />-->

    <!-- RecyclerView para datos detallados
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReportes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvUltimosMovimientos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_reporte" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
