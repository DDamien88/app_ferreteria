<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentReportes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@android:color/white"
    tools:context=".ui.reporteVentas.ReporteVentasFragment">

    <TextView
        android:id="@+id/tvReportesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Filtro de período -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFiltroPeriodo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvReportesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">

        <AutoCompleteTextView
            android:id="@+id/autoFiltroPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Período"
            android:inputType="none"
            android:paddingEnd="8dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- ⭐ Gráfico de Barras -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartVentas"
        android:layout_width="0dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/tvReportesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        tools:ignore="MissingConstraints"/>

    <!-- ⭐ Gráfico de Torta -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartCategorias"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/barChartVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
